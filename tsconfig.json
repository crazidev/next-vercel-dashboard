{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext", "webworker"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@app/*": ["app/*"],
      "@/lib/*": ["lib/*"],
      "@/components/*": ["components/*"],
      "@public/*": ["public/*"],

      // SERVER
      "@/fetch/*": ["server/fetch/*"],
      "@/actions/*": ["server/actions/*"],
      "@/database/*": ["server/database/*"],
      "@/server/*": ["server/*"],
    },
    "types": ["@serwist/next/typings"],
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "sequelize-auto.js",
    "app/sw.ts"
  ],
  "plugins": [
    {
      "name": "next"
    }
  ],
  "exclude": ["node_modules"]
}
